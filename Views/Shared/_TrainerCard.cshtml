@model Trainer

<tr class="trainer-item">
            <td>
                @Html.DisplayFor(modelItem => Model.FirstName)
            </td>
            <td>
        @Html.DisplayFor(modelItem => Model.LastName)
            </td>
            <td>
                @if (Model.Photo != null) {
            <img src="/images/Trainers/@Model.Photo" width="200">
                }
            </td>
            <td>
        @Html.DisplayFor(modelItem => Model.Email)
            </td>
            <td>
        @Html.DisplayFor(modelItem => Model.Speciality.Name)
            </td>
            
    <td>
        <a asp-action="Upsert" asp-route-id="@Model.Id">@Locals["Edit"]</a> |
        <a asp-action="Details" asp-route-id="@Model.Id">@Locals["Details"]</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">@Locals["Delete"]</a>
    </td>
</tr>


          
    