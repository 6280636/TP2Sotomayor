@model Trainer 

<div class="mt-1">

    @if (Model.Id == 0)
    {
        <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> @Locals["Create"]</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary"><i class="fas fa"></i>@Locals["Edit"]</button>
    }
    <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-circle-left"></i> @Locals["BacktoList"]</a>
</div>
